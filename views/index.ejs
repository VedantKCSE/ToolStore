<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/hero.css">
    <link rel="stylesheet" href="/stylesheets/tools.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/aboutus.css">
    <link rel="stylesheet" href="/stylesheets/howitworks.css">
    <link rel="shortcut icon" href="/images/software-development.png" type="image/x-icon">
    <title>Tool Store</title>
</head>

<body>
    <header class="header">
        <nav>
            <div class="logo">
                <img src="/images/software-development.png" alt="" />
                <a href="/">Club Management System (<span>CMS</span>)</a>
            </div>
            <input type="checkbox" id="menu-toggle" />
            <label for="menu-toggle" class="menu-icon">&#9776;</label>
            <ul class="menu">
                <li><a href="/cateogery">All Clubwise Events</a></li>
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>
    </header>

    <div class="hero">
        <h1>See what's happening</h1>
        <h2><b>@MGMCOE</b></h2>
        <h2>Central Portal for all the events</h2>
    

        <div class="search">
            <form action="/search" method="get">
                <input type="text" name="q" placeholder="Search Events" id="search">
                <button  type="submit"><i class="bi bi-search" ></i></button>
            </form>
        </div>
        
                <br>
                <h1>Explore Events</h1>

    </div>

    <div style="text-decoration: none;" class="tools">
        <% events.forEach(function(event){ %>

            <div class="tool" data-category="<%= event.category %>">

                <div class="img">

                    <img src="/images/uploads/<%= event.image %>" alt="">
                </div>
                <div class="head-star">
                    <h3>
                        <%= event.eventname%>
                    </h3>
                </div>
                <p>
                    <%= event.description%>
                </p>
                <p>
                    <%= event.date%>
                </p>

                <div class="category">
                    <a><%= event.type %></a>
                </div>
                <a href="<%= event.link%>" class="btn" target="_blank">
                    <button onclick="">Register Now</button>
                </a>

            </div>
            <% }) %>

    </div>

    <footer>
        <div class="footer">
            <div class="info">
                <h3>Contact CMS</h3>
                <a href="mailto:CMS@gmail.com" class="bi bi-envelope"> CMS@gmail.com</a>
                <a href="phone" class="bi bi-phone"> +91 1234567890</a>
            </div>

            <div class="links">
                <h3>Links</h3>
                <a href="/">Go to Top</a>
                <a href="/">Home</a>
                <a href="/NewTool">Add Event</a>
                <a href="/cateogery">Clubwise events</a>
                <a href="/profile">Profile</a>
            </div>
        </div>

        <div class="footer-bottom">


            <!-- add toolstore -->
            <div class="social">
                <a href=""><i class="bi bi-facebook"></i></a>
                <a href=""><i class="bi bi-twitter"></i></a>
                <a href=""><i class="bi bi-instagram"></i></a>
                <a href=""><i class="bi bi-linkedin"></i></a>

            </div>

            <strong>
                <p>All Rights Reserved. &copy; Club Management System (<span>CMS</span>) 2024
            </strong></p>


        </div>

    </footer>
</body>

</html>