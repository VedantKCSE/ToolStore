    <form id="UploadForm" action="/upload" method="post" enctype="multipart/form-data">
        <div>
            <a href="/"><img src="/images/software-development.png" alt="Profile Image"></a>
            <h2>Club Management System (<span>CMS</span>)</h2>
            <h1>Add a New Club Event</h1>
            <input type="text" name="eventname" placeholder="Title" required>
            <input type="text" name="description" placeholder="Description" required>
            <input type="date" name="date" placeholder="Date" required>
            <input type="text" name="type" placeholder="Type" required>
            <input type="file" name="file" placeholder="Event Poster" required>
            <input type="text" name="link" placeholder="Registration Link" required>

            <select type="text" name="club" placeholder="select the cateogery of your Tool">
                <option value="0">select club from below</option>
                <option value="1">Computer User's Club</option>
                <option value="2">IEI Students'Chapter</option>
                <option value="3">GDSC</option>
                <option value="4">Training</option>
                <option value="5">Others</option>
            </select>
            <button type="submit">Upload</button>
        </div>
    </form>
