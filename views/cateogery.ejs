<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/hero.css">
    <link rel="stylesheet" href="/stylesheets/tools.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="shortcut icon" href="/images/software-development.png" type="image/x-icon">
    <title>Tool Store</title>
</head>

<body>
    <header class="header">
        <nav>
            <div class="logo">
                <img src="/images/software-development.png" alt="">
                <a href="/">Club Management System (<span>CMS</span>)</a>
            </div>
            <input type="checkbox" id="menu-toggle">
            <label for="menu-toggle" class="menu-icon">&#9776;</label>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>
    </header>

    <div class="hero">
        <h1>All Club Events</h1>
        <h2>Browse all club events at one glance</h2>

        <div class="search">
            <form action="/search" method="get">
                <input type="text" name="q" placeholder="Search Events" id="search">
                <button style="border: none; " type="submit"><i class="bi bi-search" id="search"></i></button>
            </form>
        </div>
        


        <div class="categories-menu">
            <!-- <button class="category-btn" data-category="0">All Categories</button> -->
            <button class="category-btn" data-category="1">Computer User's Club</button>
            <button class="category-btn" data-category="2">IEI Students'Chapter</button>
            <button class="category-btn" data-category="3">GDSC</button>
            <button class="category-btn" data-category="4">Training</button>
            <button class="category-btn" data-category="5">Others</button>
        </div>
    </div>



    <div class="tools">
        <% events.forEach(function(event){ %>

            <div class="tool" data-category="<%= event.club %>">
                <div  class="img">

                    <img src="/images/uploads/<%= event.image %>" alt="">
                </div>
                <div class="head-star">
                    <h3><%= event.eventname%></h3>
                </div>
                <p><%= event.description%></p>
                <p><%= event.date%></p>

                <div class="category">
                    <a href=""><%= event.type%></a>
                </div>
                <a href="<%= event.link%>" target="_blank">
                    <button onclick="">Open Site</button>
                </a>
            </div>
        <% }) %>
    </div>

    <footer>
        <div class="footer">
            <div class="info">
                <h3>Contact CMS</h3>
                <a href="mailto:CMS@gmail.com" class="bi bi-envelope"> CMS@gmail.com</a>
                <a href="phone" class="bi bi-phone"> +91 1234567890</a>
            </div>

            <div class="links">
                <h3>Links</h3>
                <a href="/">Go to Top</a>
                <a href="/">Home</a>
                <a href="/NewTool">Add Event</a>
                <a href="/cateogery">Clubwise events</a>
                <a href="/profile">Profile</a>
            </div>
        </div>

        <div class="footer-bottom">


            <!-- add toolstore -->
            <div class="social">
                <a href=""><i class="bi bi-facebook"></i></a>
                <a href=""><i class="bi bi-twitter"></i></a>
                <a href=""><i class="bi bi-instagram"></i></a>
                <a href=""><i class="bi bi-linkedin"></i></a>

            </div>

            <strong>
                <p>All Rights Reserved. &copy; Club Management System (<span>CMS</span>) 2024
            </strong></p>


        </div>

    </footer>


    <script src="/javascripts/category.js"></script>

</body>

</html>